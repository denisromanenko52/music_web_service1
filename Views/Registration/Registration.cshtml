@using music_web_service1.Models.Domain;

@model Account

@if (ViewBag.UserExists == true)
{
    <p class="text-danger">Пользователь с таким email уже существует.</p>
}

@Html.ValidationSummary(false, "", new { @id = "authValidationSummary", @class = "text-danger" })

@using (Html.BeginForm("Registration", "Registration", FormMethod.Post))
{
    <div class="form_auth_block">
        <div class="form_auth_block_content">
            <p class="form_auth_block_head_text">Регистрация</p>

            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Введите Ваш Email" })
            </div>

            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Введите пароль" })
            </div>

            <button id="form_auth_button" class="form_auth_button" type="submit">Зарегистрироваться</button>
        </div>
    </div>
}

<style>
    .form_auth_block {
        background-color: #333; /* Цвет темного фона */
        color: #fff; /* Цвет текста */
        padding: 20px;
        border-radius: 10px;
        max-width: 400px;
        margin: 0 auto;
        margin-top: 20vh; /* Расположить по центру по вертикали */
        text-align: center;
    }

    .form_auth_block_head_text {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    #form_auth_button, a.form_auth_button {
        padding: 10px 20px;
        background-color: #f44336; /* Цвет кнопок */
        color: #fff;
        border: none;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin-right: 10px;
        cursor: pointer;
    }

        #form_auth_button:hover, a.form_auth_button:hover {
            background-color: #ba2626; /* Цвет кнопок при наведении */
        }
</style>
